#include <iostream>
using namespace std;

int main(){
int n,i=0,j=0;
    scanf("%d",&n);

    while(1)
        {
            i++;
            //공백
            if(i!=n)
            while(1)
                {
                    j++;
                    printf(" ");
                    if(j==n-i)
                        break;
                }
            
            //별
            while(1)
                {
                    j++;
                    printf("*");
                    if(j==n)
                        break;
                }
            printf("\n");
            j=0;
            if(i==n)
                break;
        }
}
