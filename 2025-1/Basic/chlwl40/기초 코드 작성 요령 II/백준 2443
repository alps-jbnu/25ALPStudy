#include <iostream>

int main() {
  int n,i,j=0,max,l=-1;
    scanf("%d",&n);
    max=2*n-1;
    i=max+2;
    while(1)
        {
            i=i-2;
            l++;
            j=0;
            if(l!=0)
            while(1)
                {
                    j++;
                    printf(" ");
                    if(j==l)
                        break;
                }
            j=0;
            while(1)
                {
                    j++;
                    printf("*");
                    if(j==i)
                        break;
                }
              
            j=0;
            printf("\n");
            j=0;
            if(i==1)
                break;
        }
}
