#include <iostream>
using namespace std;

int main(){
int n,i=0,j=0;
    scanf("%d",&n);

    i=n+1;
    while(1)
        {
         i--;
            while(1)
                {
                    j++;
                    printf("*");
                    if(j==i)
                        break;
                }
            printf("\n");
            j=0;
            if(i==1)
                break;
        }
}
