#include <iostream>

int main() {
  int n,i=-1,j=0,max;
    scanf("%d",&n);
    max=2*n-1;
    while(1)
        {
            i=i+2;
            if((max-i)!=0)
            while(1)
                {
                    j++;
                    printf(" ");
                    if(j==(max-i)/2)
                        break;
                }
            j=0;
            while(1)
                {
                    j++;
                    printf("*");
                    if(j==i)
                        break;
                }
            printf("\n");
            j=0;
            if(i==max)
                break;
        }
}
